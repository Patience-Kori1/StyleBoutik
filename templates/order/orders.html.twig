{% extends 'base.html.twig' %}

{% block title %} Commandes {% endblock %}

{% block body %}
<div class="container my-5">
    <h1 class="text-center mb-5">Historique des commandes</h1>
          {{ include ('layouts/flash_message.html.twig')}}

    {% for order in orders %}
        <div class="card shadow-sm mb-4">
            <div class="card-header bg-primary text-white">
                <h5 class="mb-0">
                    Commande n° {{ order.id }}
                    <small class="text-light">({{ order.createdAt|date('d/m/Y H:i') }})</small>
                </h5>
            </div>
            <div class="card-body">

                <!-- Infos utilisateur -->
                <h6 class="text-primary mb-3">Informations client</h6>
                <ul class="list-group list-group-flush mb-4">
                    <li class="list-group-item"><strong>Nom :</strong> {{ order.firstName }} {{ order.lastName }}</li>
                    <li class="list-group-item"><strong>Téléphone :</strong> {{ order.phone }}</li>
                    <li class="list-group-item"><strong>Adresse :</strong> {{ order.adress }}, {{ order.city.name }}</li>
                </ul>

                <!-- Infos Produits -->
                <div class="d-flex justify-content-between align-items-center">
                    <h6 class="text-primary mb-3">Produits commandés</h6>
                    {% if order.isCompleted ==true %}
                        <p class="text-primary mb-3"> <span class="mb-0 fs-5 fw-bold text-success"> Commande Livrée </span></p>
                    {% else %}
                        <p class="text-primary mb-3"><span class="mb-0 fs-5 fw-bold text-success"> Pas encore livrée</span>  </p>
                    {% endif %}
                </div>

                <div class="table-responsive mb-3">
                    <table class="table table-bordered align-middle">
                        <thead class="table-primary text-center">
                            <tr>
                                <th>Produit</th>
                                <th>Prix unitaire</th>
                                <th>Quantité</th>
                                <th>Total</th>
                            </tr>
                        </thead>
                        <tbody>
                            {% for product in order.orderedProducts %}
                                <tr>
                                    <td>{{ product.product.name }}</td>
                                    <td class="text-center">{{ product.product.price }} €</td>
                                    <td class="text-center">{{ product.quantity }}</td>
                                    <td class="text-center">{{ product.product.price * product.quantity }} €</td>
                                </tr>
                            {% endfor %}
                        </tbody>
                    </table>
                </div>

                
                <!-- Infos Prix -->
                <div class="d-flex justify-content-between align-items-center">
                    
                    {% if order.isCompleted == false %}
                        <a href="{{ path('app_orders_is-completed-update',{'id':order.id})}}" class='btn btn-outline-primary col-2 m-lg-1'>Marquer comme livrée</a>
                    {% elseif order.isCompleted == true %}
                        <a href="{{ path('app_orders_is-completed-update',{'id':order.id})}}" class='btn btn-outline-primary col-2 m-lg-1'>Marquer comme non livrée</a>
                    {% endif %}

                    <a href="{{ path('app_orders_remove',{'id':order.id})}}" class='btn btn-outline-danger col-2 m-lg-1'>Supprimer la commande</a>

                    <p class="mb-0">Frais de livraison : <strong>{{ order.city.shippingCost }} €</strong></p>

                    <p class="mb-0 fs-5 fw-bold text-primary">Total : {{ order.totalPrice }} €</p>
                </div>
            </div>
        </div>
    {% endfor %}
    {{ knp_pagination_render(orders, 'layouts/pagination_template.html.twig') }}
</div>
{% endblock %}
