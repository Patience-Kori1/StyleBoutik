<style>
        :root {
            --primary: #2C3E50;
            --primary-light: #3A506B;
            --accent: #E74C3C;
            --neutral-light: #F8F9FA;
            --text-primary: #212529;
            --border-radius: 8px;
        }
        
        .navbar-styleboutik {
            background: white;
            box-shadow: 0 2px 15px rgba(0, 0, 0, 0.1);
            padding: 0.5rem 1rem;
        }
        
        .navbar-brand {
            font-weight: 700;
            font-size: 1.5rem;
            color: var(--primary) !important;
            display: flex;
            align-items: center;
        }
        
        .nav-link {
            color: var(--text-primary) !important;
            font-weight: 500;
            padding: 0.5rem 1rem !important;
            border-radius: var(--border-radius);
            transition: all 0.2s ease;
            margin: 0 0.1rem;
            display: flex;
            align-items: center;
        }
        
        .nav-link i {
            margin-right: 0.4rem;
            font-size: 1.1rem;
        }
        
        .nav-link:hover, .nav-link:focus {
            background-color: rgba(44, 62, 80, 0.08);
            color: var(--primary) !important;
        }
        
        .nav-link.active {
            background-color: var(--primary);
            color: white !important;
        }
        
        .dropdown-menu {
            border: none;
            box-shadow: 0 5px 15px rgba(0, 0, 0, 0.1);
            border-radius: var(--border-radius);
            padding: 0.5rem;
        }
        
        .dropdown-item {
            border-radius: 6px;
            padding: 0.5rem 1rem;
            transition: all 0.2s ease;
            display: flex;
            align-items: center;
        }
        
        .dropdown-item i {
            margin-right: 0.5rem;
            color: var(--primary);
        }
        
        .dropdown-item:hover {
            background-color: rgba(44, 62, 80, 0.08);
        }
        
        .dropdown-divider {
            margin: 0.4rem 0;
        }
        
        .dropdown-header {
            font-weight: 600;
            color: var(--primary);
            font-size: 0.85rem;
            padding: 0.5rem 1rem;
        }
        
        .search-form {
            position: relative;
        }
        
        .search-form .form-control {
            border-radius: 50px;
            padding-left: 1.5rem;
            border: 1px solid #e2e8f0;
            min-width: 250px;
        }
        
        .search-form .btn {
            border-radius: 50px;
            padding: 0.5rem 1.2rem;
            background: var(--primary);
            border: none;
            font-weight: 500;
            margin-left: 0.5rem;
            color: white;
        }
        
        .search-form .btn:hover {
            background: var(--primary-light);
            color: white;
        }
        
        .navbar-toggler {
            border: none;
            padding: 0.25rem 0.5rem;
        }
        
        .navbar-toggler:focus {
            box-shadow: none;
        }
        
        .user-actions {
            display: flex;
            align-items: center;
        }
        
        .user-action-item {
            position: relative;
            margin-left: 0.5rem;
        }
        
        .user-action-link {
            display: flex;
            align-items: center;
            justify-content: center;
            width: 40px;
            height: 40px;
            border-radius: 50%;
            background: var(--neutral-light);
            color: var(--text-primary);
            transition: all 0.2s ease;
            text-decoration: none;
        }
        
        .user-action-link:hover {
            background: var(--primary);
            color: white;
        }
        
        @media (max-width: 991.98px) {
            .search-form {
                margin-top: 1rem;
                width: 100%;
            }
            
            .search-form .form-control {
                min-width: auto;
            }
            
            .navbar-collapse {
                padding: 1rem 0;
            }
            
            .user-actions {
                margin-top: 1rem;
                justify-content: center;
                width: 100%;
            }
        }
    </style>

    <nav class="navbar navbar-expand-lg navbar-styleboutik">
        <div class="container-fluid">
            <a class="navbar-brand" href="{{path('app_home_page')}}">
                <i class="bi bi-shop me-2"></i>StyleBoutik
            </a>
            
            <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarStyleBoutik" aria-controls="navbarStyleBoutik" aria-expanded="false" aria-label="Toggle navigation">
                <span class="navbar-toggler-icon"></span>
            </button>
            
            <div class="collapse navbar-collapse" id="navbarStyleBoutik">
                <ul class="navbar-nav me-auto mb-2 mb-lg-0">
                    <li class="nav-item">
                        <a class="nav-link active" aria-current="page" href="{{path('app_home_page')}}">
                            <i class="bi bi-house"></i> Accueil
                        </a>
                    </li>
                    
                    {% if categories is defined %}
                    <li class="nav-item dropdown">
                        <a class="nav-link dropdown-toggle" href="{{path('app_allCategories')}}" role="button" data-bs-toggle="dropdown" aria-expanded="false">
                            <i class="bi bi-grid"></i> Catégories
                        </a>
                        <ul class="dropdown-menu">
                            {% for category in categories %}
                                <li><h6 class="dropdown-header">{{ category.name }}</h6></li>
                                {% for subCategory in category.subCategories %}
                                    <li>
                                        <a class="dropdown-item" href="{{ path('app_home_product_filter', {'id':subCategory.id}) }}">
                                            <i class="bi bi-arrow-right"></i> {{ subCategory.name }}
                                        </a>
                                    </li>
                                {% endfor %}
                                {% if not loop.last %}
                                    <li><hr class="dropdown-divider"></li>
                                {% endif %}
                            {% endfor %}
                            <li><hr class="dropdown-divider"></li>
                            <li>
                                <a class="dropdown-item text-primary" href="{{path('app_allCategories')}}">
                                    <i class="bi bi-eye"></i> Voir toutes les catégories
                                </a>
                            </li>
                        </ul>
                    </li>
                    {% endif %}

                    {% if is_granted('ROLE_ADMIN') %}
                    <li class="nav-item dropdown">
                        <a class="nav-link dropdown-toggle" href="#" role="button" data-bs-toggle="dropdown" aria-expanded="false">
                            <i class="bi bi-gear"></i> Admin
                        </a>
                        <ul class="dropdown-menu">
                            <li><h6 class="dropdown-header">Gestion des catégories</h6></li>
                            <li><a class="dropdown-item" href="{{path('app_allCategories')}}"><i class="bi bi-list-ul"></i> Les catégories</a></li>
                            <li><a class="dropdown-item" href="{{path('app_category_new')}}"><i class="bi bi-plus-circle"></i> Ajouter une catégorie</a></li>
                            <li><hr class="dropdown-divider"></li>
                            
                            <li><h6 class="dropdown-header">Sous-catégories</h6></li>
                            <li><a class="dropdown-item" href="{{path('app_sub_category_index')}}"><i class="bi bi-diagram-3"></i> Sous-catégories</a></li>
                            <li><a class="dropdown-item" href="#"><i class="bi bi-plus-circle"></i> Ajouter une sous-catégorie</a></li>
                            <li><hr class="dropdown-divider"></li>
                            
                            <li><h6 class="dropdown-header">Produits</h6></li>
                            <li><a class="dropdown-item" href="{{path('app_product_index')}}"><i class="bi bi-box-seam"></i> Les produits</a></li>
                            <li><a class="dropdown-item" href="{{path('app_product_new')}}"><i class="bi bi-plus-circle"></i> Ajouter un produit</a></li>
                            <li><hr class="dropdown-divider"></li>
                            
                            <li><h6 class="dropdown-header">Utilisateurs</h6></li>
                            <li><a class="dropdown-item" href="{{path('app_user')}}"><i class="bi bi-people"></i> Utilisateurs</a></li>
                            <li><hr class="dropdown-divider"></li>
                            
                            <li><h6 class="dropdown-header">Commandes</h6></li>
                            <li><a class="dropdown-item" href="{{path('app_cart')}}"><i class="bi bi-cart"></i> Mon panier</a></li>
                            <li><a class="dropdown-item" href="{{path('app_order')}}"><i class="bi bi-bag-check"></i> Faire une commande</a></li>
                            <li><a class="dropdown-item" href="{{ path('app_orders_show',{'type':'all'}) }}"><i class="bi bi-clock-history"></i> Historique des commandes</a></li>
                        </ul>
                    </li>
                    
                    <li class="nav-item">
                        <a href="{{ path('app_logout') }}" class="nav-link">
                            <i class="bi bi-box-arrow-right"></i> Se déconnecter
                        </a>
                    </li>
                    {% endif %}

                    <li class="nav-item dropdown">
                        <a class="nav-link dropdown-toggle" href="#" role="button" data-bs-toggle="dropdown" aria-expanded="false">
                            <i class="bi bi-clipboard-check"></i> Commandes
                        </a>
                        <ul class="dropdown-menu">
                            <li><h6 class="dropdown-header">Gestion des commandes</h6></li>
                            <li><a class="dropdown-item" href="{{ path('app_orders_show',{'type':'all'}) }}"><i class="bi bi-list-check"></i> Toutes les commandes</a></li>
                            <li><a class="dropdown-item" href="{{ path('app_orders_show',{'type':'is-completed'}) }}"><i class="bi bi-check-circle"></i> Commandes livrées</a></li>
                            <li><a class="dropdown-item" href="{{ path('app_orders_show',{'type':'is-not-completed'}) }}"><i class="bi bi-clock-history"></i> Commandes non livrées</a></li>
                            <li><hr class="dropdown-divider"></li>
                            <li><h6 class="dropdown-header">Commandes en ligne</h6></li>
                            <li><a class="dropdown-item" href="{{ path('app_orders_show',{'type':'pay-on-stripe-is-delivered'}) }}"><i class="bi bi-credit-card"></i> Payées en ligne - Livrées</a></li>
                            <li><a class="dropdown-item" href="{{ path('app_orders_show',{'type':'pay-on-stripe-not-delivered'}) }}"><i class="bi bi-credit-card"></i> Payées en ligne - Non livrées</a></li>
                        </ul>
                    </li>
                </ul>
                
                <div class="d-flex align-items-center">
                    <form data-turbo='false' method="GET" action="{{ path('app_search_engine')}}" class="search-form d-flex" role="search">
                        <input name="word" class="form-control me-2" type="search" placeholder="Rechercher un produit..." aria-label="Search">
                        <button class="btn" type="submit">
                            <i class="bi bi-search"></i>
                        </button>
                    </form>
                    
                    <div class="user-actions ms-3">
                        {% if not app.user %}
                            <div class="user-action-item">
                                <a href="{{ path('app_register') }}" class="user-action-link" title="S'inscrire">
                                    <i class="bi bi-person-plus"></i>
                                </a>
                            </div>
                            <div class="user-action-item">
                                <a href="{{ path('app_login') }}" class="user-action-link" title="Se connecter">
                                    <i class="bi bi-box-arrow-in-right"></i>
                                </a>
                            </div>
                        {% endif %}
                    </div>
                </div>
            </div>
        </div>
    </nav>

