{% extends 'base.html.twig' %}

{% block title %}Hello UserController!{% endblock %}

{% block body %}
    <div class="container">
        <h1 class="mt-4 mb-5">Liste des utilisateurs</h1>

        {% include 'layouts/flash_message.html.twig' %}

        <table class='table'>

            <thead>    
                <tr class="table-primary">
                    <th scope="col">id</th>
                    <th scope="col">Nom</th>
                    <th scope="col">Prenom</th>
                    <th scope="col">Email</th>
                    <th scope="col">Role</th>
                    <th scope="col">Action</th>
                </tr>
            </thead> 

            <tbody>
                {% for user in users %}
                    <tr>
                        <th scope="row" >{{user.id}}</th> 

                        <td>{{user.firstName}}</td>
                        <td>{{user.lastName}}</td>
                        <td>{{user.email}}</td>
                        <td>
                            {{user.roles|join(' et ') }} {# C'est la méthode optimale mais on peut aussi utilisé une boucle for comme en bas #}

                            {# {% for role in user.roles %}
                                {{role}}
                            {% endfor %} #}

                        </td>
                        <td>
                            <a {#href="{{ path('app_update_form', {'id' : data.id})}}"#} class="btn btn-sm btn-warning" >Modifier</a> 
                            <a  {#href="{{ path('delete', {'id' : data.id})}}"#} class="btn btn-sm btn-danger">Supprimer</a>
                        </td>
                    </tr>
                {% endfor %}
            </tbody>
        </table>
    </div>
{% endblock %}