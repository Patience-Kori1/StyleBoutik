{% extends 'base.html.twig' %}

{% block title %}SubCategory index{% endblock %}

{% block body %}
<div class="container">

    <h1 class="mt-4 mb-5">Liste des sub catégories</h1>

    <table class="table">
        <thead>    
                <tr class="table-primary">
                    <th scope="col">id</th>
                    <th scope="col">Nom</th>
                    <th scope="col">Catégorie associée</th>
                    <th scope="col">Action</th>
                </tr>
            </thead> 
        <tbody>
        {% for sub_category in sub_categories %}
            <tr>
                <th scope="row" >{{sub_category.id}}</th> 

                <td>{{sub_category.name }}</td>
                <td>{{sub_category.category.name}}</td>
                <td>
                    <a class="btn btn-primary"  href="{{ path('app_sub_category_show', {'id': sub_category.id}) }}">show</a>
                    <a class="btn btn-primary"  href="{{ path('app_sub_category_edit', {'id': sub_category.id}) }}">edit</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="3">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a class="btn btn-primary" href="{{ path('app_sub_category_new') }}">Create new</a>

</div>
{% endblock %}
