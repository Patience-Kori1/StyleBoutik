{% extends 'base.html.twig' %}

{% block title %}Hello CategorieController!{% endblock %}

{% block body %}
<style>
    .example-wrapper { margin: 1em auto; max-width: 800px; width: 95%; font: 18px/1.5 sans-serif; }
    .example-wrapper code { background: #F5F5F5; padding: 2px 6px; }
    h2 {text-align:center}
</style>

<div class="example-wrapper">
    <div class="col-md-10">
        <div class="card shadow-sm">
            <div class="card-header bg-primary text-white">
                <h2 class="h4 mb-0 "> Nos différentes catégories </h2>
            </div>
        </div>
                {% include 'layouts/flash_message.html.twig' %}

        {% for categorie in categories %}

            <div class="card text-center">
                <div class="card-body">
                    <h5 class="card-title">{{categorie.name}}</h5>
                    {# <p class="card-text">{{user.firstName}}</p> #}
                    {# <a href="{{path('app_register')}}" class="btn btn-success">Ajouter</a>#}
                    <a href="{{ path('app_delete_category', {'id' : categorie.id})}}" class="btn btn-info" onclick="return confirm('Voulez-vous vraiment supprimer cette categorie')">Supprimer</a>
                    <a href="{{ path('app_update_category', {'id' : categorie.id})}}" class="btn btn-danger">Modifier</a> 
                </div>   
            </div>

        {% endfor %}

    </div>
</div>
{% endblock %}
