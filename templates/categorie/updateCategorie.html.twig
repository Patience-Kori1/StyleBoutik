{% extends 'base.html.twig' %}

{% block title %}Inscription | StyleBoutik{% endblock %}

{% block body %}
<div class="container mt-5">
    <div class="row justify-content-center">
        <div class="col-md-6">
            <div class="card shadow-sm">
                <div class="card-header bg-primary text-white">
                    <h2 class="h4 mb-0"> Modifier votre catégorie Catégorie</h2>
                </div>
                
                <div class="card-body">
                    {{ form_start(form) }}
                        <div class="mb-3">
                            {{ form_row(form.name, {
                                'label': 'Nom Catégorie',
                                'attr': {'class': 'form-control'},
                                'label_attr': {'class': 'form-label fw-bold'}
                            }) }}
                        </div>

                        
                        <div class="d-grid">
                            <button type="submit" class="btn btn-primary btn-lg">
                                Modifier la catégorie
                            </button>
                        </div>
                    {{ form_end(form) }}
                </div>
            </div>
        </div>
    </div>
</div>
{% endblock %}


