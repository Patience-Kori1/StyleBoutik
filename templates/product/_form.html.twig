
<div class="container mt-5">
    <div class="row justify-content-center">
        <div class="col-md-6">
            <div class="card shadow-sm">
                <div class="card-header bg-primary text-white">
                    <h2 class="h4 mb-0"> Ajouter un nouveau produit</h2>
                </div>
                
                <div class="card-body">
                    {{ form_start(form) }}
                        <div class="mb-3">
                            {{ form_row(form.name, {
                                'label': 'Nom',
                                'attr': {'class': 'form-control'},
                                'label_attr': {'class': 'form-label fw-bold'}
                            }) }}
                        </div>

                        <div class="mb-3">
                            {{ form_row(form.description, {
                                'label': 'Description',
                                'attr': {'class': 'form-control'},
                                'label_attr': {'class': 'form-label fw-bold'}
                            }) }}
                        </div>
#region 
                        <div class="mb-3">
                            {{ form_row(form.price, {
                                'label': 'Prix',
                                'attr': {'class': 'form-control'},
                                'label_attr': {'class': 'form-label fw-bold'}
                            }) }}
                        </div>

                        <div class="mb-3">
                            {{ form_row(form.stock, {
                                'label': 'Stock',
                                'attr': {'class': 'form-control'},
                                'label_attr': {'class': 'form-label fw-bold'}
                            }) }}
                        </div>

                        <div class="mb-3">
                            {{ form_row(form.subcategory, {
                                'label': 'Sous cat√©gorie',
                                'attr': {'class': 'form-control'},
                                'label_attr': {'class': 'form-label fw-bold'}
                            }) }}
                        </div>
                        <div class="mb-3">
                            {{ form_row(form.image, {
                                'label': 'Image',
                                'attr': {'class': 'form-control'},
                                'label_attr': {'class': 'form-label fw-bold'}
                            }) }}
                        </div>   
                
                        <div class="d-grid">
                            <button type="submit" class="btn btn-primary btn-lg">
                                Enregistrer
                            </button>
                        </div>

                         

                        {# <a href="{{ path('app_product_index') }}">back to list</a> #}

                    {{ form_end(form) }}
                </div>
            </div>
        </div>
    </div>
</div>











