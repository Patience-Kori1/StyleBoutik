{% extends 'base.html.twig' %}

{% block title %}Accueil{% endblock %}

{% block body %}
    
    <style>
        :root {
            --primary: #2C3E50;
            --primary-light: #3A506B;
            --accent: #E74C3C;
            --neutral-light: #F8F9FA;
            --text-primary: #212529;
            --border-radius: 12px;
            --shadow: 0 4px 12px rgba(0, 0, 0, 0.08);
            --shadow-hover: 0 8px 24px rgba(0, 0, 0, 0.12);
        }
        
        body {
            font-family: 'Inter', -apple-system, BlinkMacSystemFont, 'Segoe UI', Roboto, sans-serif;
        }
        
        .page-header {
            text-align: center;
            margin: 3rem 0;
            padding: 0 1rem;
        }
        
        .page-title {
            font-weight: 700;
            color: var(--primary);
            margin-bottom: 1rem;
            font-size: 2.5rem;
        }
        
        .page-subtitle {
            color: #6c757d;
            font-size: 1.1rem;
            max-width: 600px;
            margin: 0 auto;
        }
        
        .products-grid {
            display: grid;
            grid-template-columns: repeat(auto-fill, minmax(280px, 1fr)); 
            gap: 2rem;
            margin-bottom: 3rem;
        }
        
        .product-card {
            background: white;
            border-radius: var(--border-radius);
            overflow: hidden;
            transition: all 0.3s ease;
            box-shadow: var(--shadow);
            border: none;
            display: flex;
            flex-direction: column;
            height: 100%;
        }
        
        .product-card:hover {
            transform: translateY(-5px);
            box-shadow: var(--shadow-hover);
        }
        
        .product-image-container {
            height: 220px;
            overflow: hidden;
        }
        
        .product-image {
            width: 100%;
            height: 100%;
            object-fit: cover;
            transition: transform 0.3s ease;
        }
        
        .product-card:hover .product-image {
            transform: scale(1.05);
        }
        
        .product-card-body {
            padding: 1.5rem;
            display: flex;
            flex-direction: column;
            flex-grow: 1;
        }
        
        .product-title-link {
            text-decoration: none;
            color: inherit;
            transition: color 0.2s ease;
        }
        
        .product-title-link:hover {
            color: var(--primary);
        }
        
        .product-title {
            font-weight: 600;
            color: var(--text-primary);
            margin-bottom: 0.75rem;
            font-size: 1.1rem;
            line-height: 1.4;
            height: 3rem;
            overflow: hidden;
            display: -webkit-box;
            -webkit-line-clamp: 2;
            -webkit-box-orient: vertical;
        }
        
        .product-description {
            color: #6c757d;
            margin-bottom: 1.5rem;
            line-height: 1.5;
            font-size: 0.9rem;
            flex-grow: 1;
        }
        
        .product-price-container {
            display: flex;
            justify-content: space-between;
            align-items: center;
            margin-top: auto;
        }
        
        .product-price {
            color: var(--accent);
            font-weight: 700;
            font-size: 1.3rem;
        }
        
        .btn-add-cart {
            background: var(--primary);
            color: white;
            border: none;
            border-radius: 50px;
            padding: 0.6rem 1.2rem;
            font-weight: 500;
            transition: all 0.2s ease;
            display: flex;
            align-items: center;
            white-space: nowrap;
        }
        
        .btn-add-cart:hover {
            background: var(--primary-light);
            transform: translateY(-1px);
        }
        
        .btn-add-cart i {
            margin-right: 0.5rem;
        }
        
        .pagination-container {
            margin: 3rem 0;
            display: flex;
            justify-content: center;
        }
        
        .filter-section {
            background: white;
            border-radius: var(--border-radius);
            padding: 1.5rem;
            margin-bottom: 2rem;
            box-shadow: var(--shadow);
        }
        
        .filter-title {
            font-weight: 600;
            color: var(--primary);
            margin-bottom: 1rem;
            display: flex;
            align-items: center;
        }
        
        .filter-title i {
            margin-right: 0.5rem;
        }
        
        .no-products {
            text-align: center;
            padding: 3rem;
            background: white;
            border-radius: var(--border-radius);
            grid-column: 1 / -1;
        }
        
        @media (max-width: 768px) {
            .page-title {
                font-size: 2rem;
            }
            
            .products-grid {
                grid-template-columns: repeat(auto-fill, minmax(250px, 1fr));
                gap: 1.5rem;
            }
            
            .product-price-container {
                flex-direction: column;
                align-items: flex-start;
                gap: 1rem;
            }
            
            .btn-add-cart {
                width: 100%;
                justify-content: center;
            }
        }
        
        @media (max-width: 576px) {
            .products-grid {
                grid-template-columns: 1fr;
                gap: 1.5rem;
            }
        }
    </style>

    <!-- Header -->
    <div class="page-header">
        <h1 class="page-title">Découvrez notre collection</h1>
        <p class="page-subtitle">Des produits soigneusement sélectionnés pour votre style unique</p>
    </div>

    <div class="container">
        <!-- Grille de produits -->
        <div class="products-grid">
            {% for product in products %}
            <div class="product-card">
                <div class="product-image-container">
                    <img src="{{ asset('uploads/images/'~product.image)}}" class="product-image" alt="{{ product.name }}">
                </div>
                
                <div class="product-card-body">
                    <a class="product-title-link" href="{{ path('app_home_product_show',{'id':product.id}) }}">
                        <h5 class="product-title">{{ product.name }}</h5>
                    </a>
                    
                    <p class="product-description">{{ product.description|slice(0,80) }}...</p>
                    
                    <div class="product-price-container">
                        <span class="product-price">{{ product.price }} €</span>
                        
                        <a href="{{ path('app_cart_new',{'id':product.id}) }}" class="btn-add-cart">
                            <i class="bi bi-cart-plus"></i> Ajouter
                        </a>
                    </div>
                </div>
            </div>
            {% else %}
            <div class="no-products">
                <i class="bi bi-inbox" style="font-size: 3rem; color: #6c757d; margin-bottom: 1rem;"></i>
                <h3>Aucun produit disponible</h3>
                <p>Revenez bientôt pour découvrir nos nouvelles collections</p>
            </div>
            {% endfor %}
        </div>

        <!-- Pagination -->
        {% if products is not empty %}
        <div class="pagination-container">
            {{ knp_pagination_render(products, 'layouts/pagination_template.html.twig') }}
        </div>
        {% endif %}
    </div>

    {# <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script> #}
{% endblock %}


